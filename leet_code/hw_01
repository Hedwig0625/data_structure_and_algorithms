#include <iostream>
#include <vector>
using namespace std;

class Solution {
public:
int kthSmallest(vector<vector<int>>& matrix, int k) {
        int n = matrix.size();
        int low = matrix[0][0];
        int high = matrix[n-1][n-1];

        while( low < high ){
            int mid = low +(high - low) /2;
            int count = Equalcount(matrix,mid);

            if(count < k ){
                low =mid+1;
            }else{
                high = mid;
            }
        

        }
        return low;

        
    }

private:
int Equalcount(vector<vector<int>>& matrix, int mid){
    int n = matrix.size();
    int count =0;
    int row = n-1;
    int column =0;


    while(row >= 0 && column < n ){
        if (matrix[row][column] <= mid){
            count +=(row +1);
            column ++;
        }else{
            row --;
        }
    }
    return count;
}
};
